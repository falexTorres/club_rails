<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div class="row">
		<div class="offset-l2 col s12 m12 l4">
  		<div class="field">
    		<%= f.label :name %>
    		<%= f.text_field :name %>
  		</div>

  		<div class="field">
    		<%= f.label :start_time %>
    		<%= f.datetime_select :start_time, class: "selectpicker" %>
  		</div>
			
  		<div class="field">
    		<%= f.label :end_time %>
    		<%= f.datetime_select :end_time, class: "selectpicker" %>
			</div>	
			<hr>
			<div class="center-text">
				time selection in military time is
				shown below date selection.
			</div>
			<hr>
  		<div class="actions">
    		<%= f.submit %>
  		</div>
		</div>
	</div>
	<br>
<% end %>
